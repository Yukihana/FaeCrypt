<Window x:Class="Faenote.Wpf.Dialogs.PasswordDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        SizeToContent="WidthAndHeight"
        mc:Ignorable="d" Title="Password Input"
        Loaded="Window_Loaded">

    <DockPanel Margin="15 5">
        <TextBlock Text="Enter the password for decryption:" DockPanel.Dock="Top" Margin="5" />
        <UniformGrid Rows="1" Height="50" HorizontalAlignment="Center" DockPanel.Dock="Bottom">
            <Button IsDefault="True" Click="Accept_Click" Margin="5" Height="30" Width="100">OK</Button>
            <Button IsCancel="True" Click="Cancel_Click" Margin="5" Height="30" Width="100">Cancel</Button>
        </UniformGrid>
        <PasswordBox x:Name="PassBox" DockPanel.Dock="Top" Width="300" Margin="5" Height="25" VerticalContentAlignment="Center" />
    </DockPanel>
</Window>